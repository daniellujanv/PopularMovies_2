<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">monospace</item>
    </style>

    <style name="titleTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/material_blue_grey_900</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="titleTextViewSw600dp" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/material_blue_grey_900</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="subTitleTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/material_blue_grey_900</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="movieDetail" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_material_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
